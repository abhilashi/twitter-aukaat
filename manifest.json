{
  "manifest_version": 2,
  "name": "Twitter Auqaat",
  "description": "Auqaat hai kya?",
  "version": "1.0",

  "permissions": ["activeTab", "tabs", "storage", "https://twitter.com/*"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/logo.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },

  "icons": {
    "128": "images/logo.png"
  }
}

