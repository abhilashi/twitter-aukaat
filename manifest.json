{
  "manifest_version": 2,
  "name": "Twitter Auqaat",
  "description": "Auqaat hai kya?",
  "version": "1.0",

  "permissions": ["activeTab"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/logo.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "128": "images/logo.png"
  }
}

